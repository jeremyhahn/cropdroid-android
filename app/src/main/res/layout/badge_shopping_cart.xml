<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.shoppingcart.CheckoutFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="cart"
            type="com.jeremyhahn.cropdroid.ui.shoppingcart.CartViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/cart_actionbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@android:color/transparent"
        android:focusable="true">

        <!-- Menu Item Image -->
        <ImageView
            android:id="@+id/actionbar_cart_imageview"
            android:layout_width="36dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:src="@drawable/ic_fast_cart" />

        <!-- Badge Count -->
        <TextView
            android:id="@+id/actionbar_cart_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="27dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="right|end|top"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/badge_background"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="@{cart.size.toString()}"
            android:visibility='@{(cart.size > 0) ? View.VISIBLE : View.GONE}' />

    </RelativeLayout>

</layout>