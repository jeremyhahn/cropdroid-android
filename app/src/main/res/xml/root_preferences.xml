        <EditTextPreference
            app:key="reservoir.uri"
            app:title="@string/pref_address"
            app:dependency="reservoir.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="reservoir.gallons"
            app:title="@string/pref_gallons"
            app:dependency="reservoir.enable"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="reservoir.hardwareVersion"
            android:title="@string/pref_hardwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="reservoir.firmwareVersion"
            android:title="@string/pref_firmwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />
<!--
        <Preference
            app:key="reservoir.metrics"
