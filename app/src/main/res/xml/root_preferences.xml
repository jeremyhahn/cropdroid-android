    <PreferenceCategory app:title="@string/doser_header">

        <SwitchPreferenceCompat
            app:key="doser.enable"
            app:title="@string/pref_enable" />

        <SwitchPreferenceCompat
            app:key="doser.notify"
            app:title="@string/pref_notify"
            app:dependency="doser.enable"/>

        <EditTextPreference
            app:key="doser.uri"
            app:title="@string/pref_address"
            app:dependency="doser.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="doser.hardwareVersion"
            android:title="@string/pref_hardwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="doser.firmwareVersion"
            android:title="@string/pref_firmwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

<!--
        <Preference
            app:key="doser.channels"
            app:title="@string/pref_channels"
            app:dependency="doser.enable"
            app:summary="Enable / disable doser controller channels"/>
-->
