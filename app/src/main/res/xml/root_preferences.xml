    <PreferenceCategory app:title="@string/smtp_header">

        <SwitchPreferenceCompat
            app:key="smtp.enable"
            app:title="@string/pref_enable"
            app:useSimpleSummaryProvider="true" />/>

        <EditTextPreference
            app:key="smtp.host"
            app:title="@string/smtp_host_title"
            app:dependency="smtp.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="smtp.port"
            app:title="@string/smtp_port_title"
            app:dependency="smtp.enable"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="smtp.username"
            app:title="@string/smtp_user_title"
            app:dependency="smtp.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="smtp.password"
            app:title="@string/smtp_pass_title"
            app:dependency="smtp.enable"
            android:inputType="textPassword"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="smtp.recipient"
            app:title="@string/smtp_to_title"
            app:dependency="smtp.enable"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

