<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        app:key="user_management_settings"
        app:title="User Management"
        app:fragment="com.jeremyhahn.cropdroid.ui.settings.FarmUserManagementFragment" />

    <PreferenceCategory app:title="@string/general_header">

        <EditTextPreference
            app:key="name"
            app:title="@string/space_name_title"
            app:useSimpleSummaryProvider="true" />
<!--
        <ListPreference
            app:key="interval"
            app:title="@string/interval_title"
            app:defaultValue="Interval"
            app:entries="@array/interval_entries"
            app:entryValues="@array/interval_values"
            app:useSimpleSummaryProvider="true" />
-->
        <EditTextPreference
            android:key="interval"
            android:title="@string/interval_title"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="mode"
            app:title="@string/mode"
            app:defaultValue="Virtual"
            app:entries="@array/mode_entries"
            app:entryValues="@array/mode_values"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="timezone"
            app:title="@string/timezone"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/room_header">

        <SwitchPreferenceCompat
            app:key="room.enable"
            app:title="@string/pref_enable" />

        <SwitchPreferenceCompat
            app:key="room.notify"
            app:title="@string/pref_notify"
            app:dependency="room.enable"/>

        <EditTextPreference
            app:key="room.uri"
            app:title="@string/pref_address"
            app:dependency="room.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="room.video"
            app:title="@string/video_feed_url"
            app:dependency="room.enable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="room.hardwareVersion"
            android:title="@string/pref_hardwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:key="room.firmwareVersion"
            android:title="@string/pref_firmwareVersion"
            android:enabled="false"
            android:selectable="false"
            android:shouldDisableView="false"
            android:inputType="number"
            app:useSimpleSummaryProvider="true" />
<!--
        <Preference
            app:key="room.metrics"
            app:title="@string/pref_metrics"
            app:dependency="room.enable"
            app:summary="Enable / disable room controller metrics"/>

        <Preference
            app:key="room.channels"
            app:title="@string/pref_channels"
            app:dependency="room.enable"
            app:summary="Enable / disable room controller channels"/>

-->
    </PreferenceCategory>

