<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremyhahn.cropdroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="true"
            android:launchMode="singleTop"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />

        <activity android:name=".NewMasterControllerActivity" />

        <activity
            android:name=".MasterControllerListActivity"
            android:label="@string/title_activity_masters"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".MicroControllerActivity"
            android:label="@string/title_activity_microcontrollers"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>