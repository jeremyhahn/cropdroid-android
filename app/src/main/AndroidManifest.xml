<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremyhahn.cropdroid">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.schedule.ScheduleListActivity"></activity>
        <activity android:name=".ui.condition.ConditionListActivity"></activity>
        <activity android:name=".ui.schedule.ScheduleActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.schedule.WeekViewActivity"
            android:label="@string/title_activity_schedule" />
        <activity
            android:name=".NewMasterControllerActivity"
            android:label="@string/title_activity_masters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MasterControllerListActivity"
            android:label="@string/title_activity_masters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.microcontroller.MicroControllerActivity"
            android:label="@string/title_activity_microcontrollers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true" />
        <activity android:name=".MetricDetailActivity" />

        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="true"
            android:launchMode="singleTop" />

        <receiver android:name=".StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>